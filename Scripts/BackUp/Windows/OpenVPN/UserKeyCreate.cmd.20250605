echo off 
SetLocal EnableExtensions
setlocal EnableDelayedExpansion

if "%1" EQU "" (
  Echo Должен быть задан хотя бы один входной параметр
  exit
)

set "bcert=<cert>"
set "ecert=</cert>"
set "bkey=<key>"
set "ekey=</key>"

set user_name=%1

rem cd C:\Program Files\OpenVPN\easy-rsa
rem EasyRSA-Start.bat
rem ./easyrsa gen-req %user_name%
rem ./easyrsa sign-req client %user_name% nopass

mkdir "D:\VPN_Key\%user_name%"

copy "C:\Program Files\OpenVPN\sample-config\client_def.ovpn" "D:\VPN_Key\%user_name%\client.ovpn"

copy "C:\Program Files\OpenVPN\easy-rsa\pki\ca.crt" "D:\VPN_Key\%user_name%\"
copy "C:\Program Files\OpenVPN\easy-rsa\pki\ta.key" "D:\VPN_Key\%user_name%\"

copy "C:\Program Files\OpenVPN\easy-rsa\pki\issued\%user_name%.*" "D:\VPN_Key\%user_name%\user.crt"
copy "C:\Program Files\OpenVPN\easy-rsa\pki\private\%user_name%.*" "D:\VPN_Key\%user_name%\user.key"

echo. >> "D:\VPN_Key\%user_name%\client.ovpn"
echo !bcert!>> "D:\VPN_Key\%user_name%\client.ovpn"
type "D:\VPN_Key\%user_name%\user.crt" >> "D:\VPN_Key\%user_name%\client.ovpn"
echo !ecert!>> "D:\VPN_Key\%user_name%\client.ovpn"

echo. >> "D:\VPN_Key\%user_name%\client.ovpn"
echo !bkey!>> "D:\VPN_Key\%user_name%\client.ovpn"
type "D:\VPN_Key\%user_name%\user.key" >> "D:\VPN_Key\%user_name%\client.ovpn"
echo !ekey!>> "D:\VPN_Key\%user_name%\client.ovpn"

rem cd "C:\Program Files\7-Zip" 
rem "C:\Program Files\7-Zip\7z.exe" a -tzip -mx5 -r -o"D:\VPN_Key\" %user_name%.zip "D:\VPN_Key\%user_name%\*"

copy "D:\VPN_Key\%user_name%\client.ovpn" "D:\VPN_Key\%user_name%.ovpn"